[user]
	name = Shusei Tanaka
	email = shusay.t@gmail.com

[color]
  ui=auto

[core]
	excludesfile = /Users/shusay/.gitignore
	editor = code --wait

[alias]
  st = status
  l = log
  mst = checkout master
  br = branch
  co = checkout
  aa = add -A
  cm = commit
  cmm = commit -m
  origin = org
  pl = pull
  ps = push

[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path =
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true

[tig "bind"]
  generic = g move-first-line
  generic = G move-last-line
[heroku]
	account = vivivijob
[filter "media"]
	clean = git-media-clean %f
	smudge = git-media-smudge %f
[ghq]
  root = ~/src
[url "git@github.com:"]
	insteadOf = https://github.com/
